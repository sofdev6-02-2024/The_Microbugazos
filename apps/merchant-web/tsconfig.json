{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmitOnError": false,
    "skipLibCheck": true, // Esto omite la comprobaci√≥n de tipos en las bibliotecas
    "strict": false, // Esto desactiva el modo estricto
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/commons/*": [
        "./src/commons/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/contexts/*": [
        "./src/commons/contexts/*",
        "./src/contexts/*"
      ],
      "@/hooks/*": [
        "./src/commons/hooks/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}